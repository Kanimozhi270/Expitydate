<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#fff" android:startColor="#fff" android:type="linear" />

                    <stroke android:width="1dp" android:color="#B3B1B1" />

                    <corners android:radius="5dp" />

                    <padding
                        android:right="10dp"
                        android:left="10dp"
                       />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/expity_spinnerarrow" android:tint="#000" />
            </item>
        </layer-list>
    </item>

</selector>